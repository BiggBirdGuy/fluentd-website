<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container">     
  <div class="row">
    <div class="col-md-12">
      <div class="headline"><h2><%=@title%></h2></div>
      <p>
        This page gets updated every 10 minutes to tabulate all the Fluentd plugins listed on Rubygems.
        <a href="/plugins">Go here</a> to browse the plugins by category.
      </p>

      <div class="clearfix">
		    <table class="table table-bordered">
			    <thead>
				    <tr>
					    <th width="">Download</th>
					    <th width="">Name</th>
					    <th width="">Author</th>
					    <th width="">About</th>
					    <th width="">Version</th>
				    </tr>
			    </thead>
			    <tbody>
            <% @plugins.each do |plugin| %>
				    <tr>
					    <td align="right"><%= plugin['downloads'] %></td>
					    <td><a href="<%= plugin['homepage_uri'] %>"><%= plugin['name'].gsub(/fluent-plugin-/, '') %></a></td>
					    <td style="font-size: 12px;"><%= plugin['authors'] %></td>
					    <td style="font-size: 14px;"><%= plugin['info'] %></td>
					    <td><%= plugin['version'] %></td>
				    </tr>
            <% end %>
			    </tbody>
		    </table>
 			<h3 style="color:#FF0000"> Obsolete Plugins: These plugins are considered either unmaintained, or their functionalities have been subsumed by other plugins. Use them with caution.</h3>
		    <table class="table table-bordered">
			    <thead>
				    <tr>
					    <th width="">Download</th>
					    <th width="">Name</th>
					    <th width="">Author</th>
					    <th width="">About</th>
					    <th width="">Version</th>
				    </tr>
			    </thead>
			    <tbody>
            <% @obsolete_plugins.each do |plugin| %>
				    <tr>
					    <td align="right"><%= plugin['downloads'] %></td>
					    <td><a href="<%= plugin['homepage_uri'] %>"><%= plugin['name'].gsub(/fluent-plugin-/, '') %></a></td>
					    <td style="font-size: 12px;"><%= plugin['authors'] %></td>
					    <td style="font-size: 14px;"><%= plugin['info'] %></td>
					    <td><%= plugin['version'] %></td>
				    </tr>
            <% end %>
			    </tbody>
		    </table>
      </div>

    </div><!--/col-md-12-->
  </div><!--/row-->        

</div><!--/container-->     
<!--=== End Content Part ===-->
